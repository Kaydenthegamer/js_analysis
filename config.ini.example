[Gemini]
api_key = YOUR_GEMINI_API_KEY_HERE
model = gemini-2.5-flash
# 单个代码块发送给Gemini的最大字符数
max_chunk_size = 100000

[Proxy]
# 代理类型, "http". 如果不需要代理，请留空.
type = http
host = 127.0.0.1
port = 8081

[Prompt]
# 在这里定义你的自定义提示词。
# 使用 {js_code} 作为占位符，它将被替换为实际的 JavaScript 代码。
custom_prompt = "你是一个资深前端安全专家，请分析以下JavaScript代码，并找出其中可能存在的安全漏洞、敏感信息泄露、以及恶意行为。这是代码的第一部分（或全部）。请以中文返回分析结果。代码如下：\n\n{js_code}"
# 当代码被分块时，用于后续块的提示词。
chunk_prompt = "这是同一个JavaScript文件的后续部分，请继续你的分析，使用中文回答。代码片段如下：\n\n{js_code}"
# 当所有分块分析完成后，用于最终总结的提示词。
summary_prompt = "你是一个资深安全报告撰写专家。以下是针对同一个JavaScript文件的多个部分进行的独立安全分析报告。你的任务是：\n1. 将这些分散的报告内容汇总并提炼成一份全面、连贯的最终安全分析报告。\n2. **关键要求**：对于每一个发现的安全漏洞或问题，你必须清晰地引用导致该问题的具体代码片段，并如果原始报告中提到了行号，也必须一并保留和展示。\n3. 移除重复的分析内容，但要确保所有独特的漏洞都被包含在内。\n4. 最终报告应结构清晰，将问题描述、有问题的代码示例、以及潜在的修复建议明确地对应起来。要使用中文回答。\n\n原始分析报告如下：\n\n{analysis_reports}"
